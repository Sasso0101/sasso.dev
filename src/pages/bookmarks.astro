---

<Layout title="Bookmarks - Salvatore Andaloro">
    <h1 class="text-2xl font-bold mb-6 text-zinc-900 dark:text-zinc-100">Bookmarks üîñ</h1>
        
    <div class="text-base text-zinc-700 dark:text-zinc-300 mb-10 font-serif leading-relaxed">
        <p>
            A collection of interesting nodes found on the web.
        </p>
    </div>

    <div class="space-y-16">
        {categories.map(category => (
            <section>
                <h2 class="text-lg font-bold mb-6 text-accent-600 dark:text-accent-500 uppercase tracking-widest flex items-center gap-2">
                    <span class="text-zinc-400 select-none">{category.icon}</span> {category.name}
                </h2>
                
                <ul class="space-y-6">
                    {category.items.map(item => (
                        <li class="group">
                            <div class="flex flex-col sm:flex-row sm:items-baseline gap-1 sm:gap-4">
                                <a href={item.url} target="_blank" rel="noopener noreferrer" class="font-bold text-lg text-zinc-900 dark:text-zinc-100 hover:text-accent-600 dark:hover:text-accent-400 hover:underline decoration-dashed underline-offset-4 transition-colors">
                                    {item.title}
                                </a>
                                <span class="hidden sm:inline-block flex-1 border-b border-dashed border-zinc-300 dark:border-zinc-800 relative -top-1.5 opacity-50"></span>
                                <span class="text-xs text-zinc-400 font-mono shrink-0">
                                    [{new URL(item.url).hostname.replace('www.', '')}]
                                </span>
                            </div>
                            {item.desc && (
                                <p class="text-sm text-zinc-500 mt-1 pl-0 sm:pl-0 font-mono dark:text-zinc-300">
                                    <span class="text-zinc-300 dark:text-zinc-500 select-none">// </span>
                                    {item.desc}
                                </p>
                            )}
                        </li>
                    ))}
                </ul>
            </section>
        ))}
    </div>
</Layout>