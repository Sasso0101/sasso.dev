---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Blog - Salvatore Andaloro">
  <section class="mb-20">
    <h1 class="text-3xl font-bold mb-10 text-zinc-900 dark:text-zinc-100">Blog üìù</h1>
    
    <ul class="space-y-8">
      {posts.map((post) => (
        <li>
          <a href={`/blog/${post.slug}/`} class="group block cursor-pointer">
            <div class="flex flex-col sm:flex-row sm:items-baseline justify-between mb-2">
              {/* Title with hover effect */}
              <h2 class="text-2xl font-bold text-zinc-900 dark:text-zinc-100 group-hover:text-accent-600 dark:group-hover:text-accent-500 group-hover:underline decoration-2 underline-offset-4 transition-colors">
                {post.data.title}
              </h2>
              
              {/* Date styled as metadata */}
              <time datetime={post.data.pubDate.toISOString()} class="text-sm font-bold uppercase tracking-wider text-zinc-400 shrink-0 mt-1 sm:mt-0">
                {post.data.pubDate.toLocaleDateString('en-us', {
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric',
                })}
              </time>
            </div>
            
            {/* Description with increased readability */}
            <p class="text-lg text-zinc-600 dark:text-zinc-400 leading-relaxed max-w-3xl">
              {post.data.description}
            </p>
          </a>
        </li>
      ))}
    </ul>
  </section>
</Layout>